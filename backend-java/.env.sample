# Java Backend Environment Variables

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/chatbot
SPRING_DATASOURCE_USERNAME=chatbot_user
SPRING_DATASOURCE_PASSWORD=chatbot_password
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Server Configuration
SERVER_PORT=8080

# Python AI Service Configuration
AI_SERVICE_URL=http://localhost:5000

# CORS Configuration (comma-separated list of allowed origins)
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRATION=86400000

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG

# Application Performance
JAVA_OPTS=-XX:+UseZGC -XX:+UnlockExperimentalVMOptions -Xmx512m